<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">

	<parent>
        <artifactId>commandapi</artifactId>
        <groupId>dev.jorel</groupId>
        <version>4.1</version>
    </parent>
    
    <modelVersion>4.0.0</modelVersion>

    <artifactId>commandapi-plugin</artifactId>

    <dependencies>
        <dependency>
            <groupId>dev.jorel</groupId>
            <artifactId>commandapi-core</artifactId>
            <version>4.1</version>
        </dependency>
        <dependency>
            <groupId>dev.jorel</groupId>
            <artifactId>commandapi-vh</artifactId>
            <version>4.1</version>
        </dependency>
        <dependency>
            <groupId>dev.jorel</groupId>
            <artifactId>commandapi-1.16.2</artifactId>
            <version>4.1</version>
        </dependency>
        <dependency>
            <groupId>dev.jorel</groupId>
            <artifactId>commandapi-1.16.1</artifactId>
            <version>4.1</version>
        </dependency>
        <dependency>
            <groupId>dev.jorel</groupId>
            <artifactId>commandapi-1.15</artifactId>
            <version>4.1</version>
        </dependency>
        <dependency>
            <groupId>dev.jorel</groupId>
            <artifactId>commandapi-1.14.4</artifactId>
            <version>4.1</version>
        </dependency>
        <dependency>
            <groupId>dev.jorel</groupId>
            <artifactId>commandapi-1.14.3</artifactId>
            <version>4.1</version>
        </dependency>
        <dependency>
            <groupId>dev.jorel</groupId>
            <artifactId>commandapi-1.14</artifactId>
            <version>4.1</version>
        </dependency>
        <dependency>
            <groupId>dev.jorel</groupId>
            <artifactId>commandapi-1.13.2</artifactId>
            <version>4.1</version>
        </dependency>
        <dependency>
            <groupId>dev.jorel</groupId>
            <artifactId>commandapi-1.13.1</artifactId>
            <version>4.1</version>
        </dependency>
        <dependency>
            <groupId>dev.jorel</groupId>
            <artifactId>commandapi-1.13</artifactId>
            <version>4.1</version>
        </dependency>
    </dependencies>

    <build>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-shade-plugin</artifactId>
                <executions>
                    <execution>
                        <phase>package</phase>
                        <goals>
                            <goal>shade</goal>
                        </goals>
                        <configuration>
			                <artifactSet>
			                	<includes>
			                		<include>dev.jorel:*</include>
			                	</includes>
			                </artifactSet>
			                <filters>
			                	<filter>
			                		<artifact>dev.jorel:commandapi-core</artifact>
			                		<excludes>
			                			<exclude>dev/jorel/commandapi/CommandAPIVersionHandler**</exclude>
			                		</excludes>
			                	</filter>
			                </filters>
			            </configuration>
                    </execution>
                </executions>
            </plugin>
        </plugins>
    </build>
</project>